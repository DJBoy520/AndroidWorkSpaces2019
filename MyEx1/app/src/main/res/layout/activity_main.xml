        android:text="="
        android:textSize="60dp" />

    <Button
        android:id="@+id/number0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowSpan="2"
        android:text="0"
        android:textSize="60dp" />

    <Button
        android:id="@+id/dian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowSpan="2"
        android:text="."
        android:textSize="60dp" />

    <Button
        android:id="@+id/jia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowSpan="2"
        android:text="+"
        android:textSize="60dp" />

</GridLayout>
